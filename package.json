{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.8.3",
    "@material-ui/icons": "^4.5.1",
    "@react-native-community/google-signin": "^3.0.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.2.1",
    "eslint": "^6.8.0",
    "firebase": "^7.17.2",
    "react": "^16.12.0",
    "react-dom": "^16.13.0",
    "react-materialize": "^3.5.9",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "react-with-firebase-auth": "^1.3.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2",
    "surge": "^0.21.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "publish": "npm run build; echo 'https://rpguia-prod1.surge.sh' > ./build/CNAME && surge -p ./build",
    "publish:test": "npm run build; echo 'https://rpguia-test1.surge.sh' > ./build/CNAME && surge -p ./build",
    "wait-till-tests": "node .ci/getStatusOfTests.js",
    "pretest": "./node_modules/.bin/eslint --ignore-path .gitignore . --fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "husky": "^4.0.10",
    "lint-staged": "^10.2.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretest",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
